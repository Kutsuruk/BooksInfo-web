<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BooksInfo</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <a class="navbar-brand hidden-xs hidden-sm" href="/">
            ПО "Підручники": інформація про підручники і авторів та клас і дату видачі
        </a>
        <a class="navbar-brand visible-sm" href="/">
            ПО "Підручники": інформація про підручники та авторів
        </a>
        <a class="navbar-brand visible-xs" href="/">ПО "Підручники"</a>
        @*<ul class="nav navbar-nav navbar-right">
            <li>
                <a href="/Home/EntitiesList">
                    <span class="glyphicon glyphicon-list"></span>
                    Сутності ПО
                </a>
            </li>
        </ul>*@
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - BooksInfo</p>
            @RenderSection("Footer", false)
            @section Footer{Час генерації сторінки: @DateTime.Now.ToLongTimeString()}
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>